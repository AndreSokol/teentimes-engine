<title>ZenSick's dark side</title>
<link href="/public/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<script src="http://code.jquery.com/jquery-2.1.3.min.js"></script>
<script src="/public/js/admin.js"></script>
<style>
	.body>div {
		max-height: 300px;
		max-width: 100%;
		overflow-y: auto;
	}
	
	.time {
		width: 160px;
	}
	
	.id {
		width: 30px;
		font-weight: bold;
	}
	
	.type {
		width: 50px;
	}
	
	.title {
		width: 200px;
	}
	
	.switch {
		text-align: center;
		width: 110px;
	}
	
	.hddn {
		display: none;
	}
	
	.container {
		width: 100%;
		padding: 0px;
	}
	
	form {
		margin-bottom: 2px;
	}
	
	.switch a {
		margin-bottom: 2px;
		width: 68px;
	}
</style>
<center>
	<h3>Hi, <%- username %>!</h3>
</center>

<center>
	<a class="btn btn-primary btn-lg" href="/admin/add">Add new post here</a>
	<a class="btn btn-default btn-lg" href="/admin/user">Check user info</a>
	<a class="btn btn-default btn-lg" href="/logoff">Log off</a>
</center>

<br>
<center>
	<button class="btn btn-default btn-primary btn-lg" href="#" id="all-btn">All</button>
	<button class="btn btn-default btn-lg" href="#" id="articles-btn">Articles</button>
	<button class="btn btn-default btn-lg" href="#" id="img-btn">Img</button>
	<button class="btn btn-default btn-lg" href="#" id="music-btn">Music</button>
	<button class="btn btn-default btn-lg" href="#" id="lastissue-btn">Last Issue</button>
	<button class="btn btn-default btn-lg" href="#" id="literature-btn">Literature</button>
</center>
<br>

<div class="container">
<div id="all">
	<table class="table table-condensed table-striped" style="margin:auto; width:98%; min-width:800px;">
		<thead>
			<th class="id">ID</th>
			<th class="type">AUTHOR</th>
			<th class="title">TITLE</th>
			<th class="body">BODY</th>
			<th class="time">TIME</th>
			<th class="switch">MANAGE</th>
		</thead>
		<% for(var i = 0; i < posts.length; i++) { %>
			<tr class="<% if(!posts[i].visible){ %>warning<% } %>">
				<td class="id"><%- posts[i].id %></td>
				<td class="type"><%- posts[i].author %></td>
				<td class="title"><a href="/<%- posts[i].type %>/<%- posts[i].id %>" target="_blank"><%- posts[i].title %></a></td>
				<td class="body"><div><%- posts[i].body %></div></td>
				<td class="time"><time><%- String(posts[i].created).slice(0, 21) %></time></td>
				<td class="switch">
					<form action="/admin/switch/<%- posts[i].id %>" method="post">
						<input type='submit' value="Switch" class="btn btn-default">
					</form>
					<a class="btn btn-default" role="button" href="/admin/edit/<%- posts[i].id %>">Edit</a>
					<a class="btn btn-danger" role="button" href="/admin/delete/<%- posts[i].id %>">Delete</a>
				</td>
			</tr>
		<% } %>
	</table>
</div>

