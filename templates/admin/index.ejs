<title>ZenSick's dark side</title>
<link href="/public/bootstrap/css/bootstrap.min.css" rel="stylesheet">
<link href="/public/admin.css" rel="stylesheet">
<script src="http://code.jquery.com/jquery-2.1.3.min.js"></script>

<script>
	var username = '<%- username %>';
</script>

<script src="https://cdn.socket.io/socket.io-1.2.0.js"></script>
<script src="/public/js/admin.js"></script>

<!--  HEADER -->

<div class="head">
	<center>
		<h3>Привет, <%- username %>!</h3>
	</center>

	<center>
		<a class="btn btn-success btn-lg" href="/admin/add">Ебашить пост!</a>
		<a class="btn btn-default btn-lg" href="/admin/user">Информация об авторе</a>
		<a class="btn btn-default btn-lg" href="/logoff">Выход</a>
	</center>
	<br>
	<center>
		<a class="btn btn-default btn-lg" href="admin/guideline">Гайдлайн</a>
		<a class="btn btn-default btn-lg" href="admin/manual">Мануал по оформлению</a>
	</center>

	<br>
	<center>
		<button class="btn btn-default btn-info btn-lg" href="#" id="all-btn">Все</button>
		<button class="btn btn-default btn-lg" href="#" id="articles-btn">Articles</button>
		<button class="btn btn-default btn-lg" href="#" id="img-btn">Img (Art)</button>
		<button class="btn btn-default btn-lg" href="#" id="music-btn">Music</button>
		<button class="btn btn-default btn-lg" href="#" id="lastissue-btn">Last Issue</button>
		<button class="btn btn-default btn-lg" href="#" id="literature-btn">Literature</button>
	</center>
	<br>
</div>

<!--  /HEADER -->

<div class="container">
<div id="all">
	<div class="cnt">
		Видны читателям
		<% for(var i = 0; i < posts.length; i++) { %>
		<% if(!posts[i].visible) continue; %>
		<div class="post_cnt <%- posts[i].type %>" id='p<%- posts[i].id %>'>
			<div class="cover">LOL</div>
			<div class="title_cnt">
				<div class="id"><%- posts[i].id %></div>
				<div class="title"><%- posts[i].title %></div>
				<div class="author"><%- posts[i].author %></div>
			</div>
			<div class="dropdown_cnt dropdown_cnt_hidden">
				<div class="id" style="opacity:0;">42</div>
				<div class="body">
					<div class='body_cnt'><%- posts[i].body %></div>
					<div class="time_cnt"><%- posts[i].created %></div>
				</div>
				<div class="btns">
					<button class="btn btn-default switch">Switch</button>
					<a class="btn btn-default" role="button" href="/admin/edit/<%- posts[i].id %>">Edit</a>
					<a class="btn btn-danger" role="button" href="/admin/delete/<%- posts[i].id %>">Delete</a>
				</div>
			</div>
		</div>
		<% } %>
	</div>
	<div class="cnt">
		Не видны читателям
		<% for(var i = 0; i < posts.length; i++) { %>
		<% if(posts[i].visible) continue; %>
		<div class="post_cnt <%- posts[i].type %>" id='p<%- posts[i].id %>'>
			<div class="cover">LOL</div>
			<div class="title_cnt">
				<div class="id"><%- posts[i].id %></div>
				<div class="title"><%- posts[i].title %></div>
				<div class="author"><%- posts[i].author %></div>
			</div>
			<div class="dropdown_cnt dropdown_cnt_hidden">
				<div class="id" style="opacity:0;">42</div>
				<div class="body">
					<div class='body_cnt'><%- posts[i].body %></div>
					<div class="time_cnt"><%- posts[i].created %></div>
				</div>
				<div class="btns">
					<button class="btn btn-default switch">Switch</button>
					<a class="btn btn-default" role="button" href="/admin/edit/<%- posts[i].id %>">Edit</a>
					<a class="btn btn-danger" role="button" href="/admin/delete/<%- posts[i].id %>">Delete</a>
				</div>
			</div>
		</div>
		<% } %>
	</div>
</div>
</div>