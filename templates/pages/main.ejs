<!DOCTYPE html>
<html>
<head>
    <!-- nyaa nyaa http://www.youtube.com/watch?v=Am12GlkJktc -->
    <%- block_header %>
    <title>Zen Sick</title>
</head>
<body>
    <div class="bars" id='nav_bar_cnt'>
		<div class="NavBar" id='nav_bar'>
			<ul id="nyaa1">
                <li><a href="/img">ART</a></li>
                <li><a href="/music">MUSIC</a></li>
                <li><a href="/literature">LITERATURE</a></li>
                <li><a href="/article">ARTICLES</a></li>
			</ul>
		</div>
    </div>
	
	<div class="bars" style="opacity:0; height:50px;">this must be invisible</div>
    
    <div class="bars">
        <div class="Header">
            <h1><a href="/">Zen Sick</a></h1>
            <p>The magazine about art, modern culture, net projects, music, experimental literature and lifestyle.</p>
        </div>
	</div>
	
	
    <!-- template thingy -->
	<div class="column">
	<% for(var i = 0; i < posts.length; i++) { %>
        <div class="<%- posts[i].type %>">
			<h2><a href="/<%- posts[i].type %>/<%- posts[i].id %>"><%- posts[i].title %></a></h2>
			<%- posts[i].body %>
            <div class='tags' id='t<%- posts[i].id %>'></div>
            <div id="time">
				<time><%- String(posts[i].created).slice(16, 21) %></time>
			</div>
		</div>
    <% } %>
	</div>
    <!-- end of template thingy -->
	
	
	
    <div class="bars">
        
        <!-- page buttons -->       
        <div class="page_bar">
            <div class="page_bar_inner">
                <% for(var i = 1; i <= posts_count; i += 1) { %>
                <div class="page_button<%= i == current_page ? ' page_button_current' : '' %>">
                    <a href="?p=<%- i %>"><%- i %></a>
                </div>
                <% } %>
            </div>
        </div>
        <style>
            .page_button_current {
                font-weight: bold;
                text-decoration: underline;
            }
            .page_bar {
                margin-top: 10px;
                text-align: center;
                width: 100%;
            }
            .page_bar_inner {
                margin: auto;
                display: inline-flex;
            }
            .page_button {
                padding: 5px;
                background: white;
                margin: 5px;
            }
            
            .page_button a {
                text-decoration: none;
                color: black;
                font-weight: bold;
                font-size: 24px;
                font-family: PT Sans,monospace;
            }
        </style>
        <!-- end of page buttons -->
        
        <%- block_footer %>
    </div>
</body>
</html>
